{
    "name": "nodeloc/oauth-telegram",
    "description": "Log in to your Flarum forum with Telegram",
    "keywords": [
        "flarum", "telegram", "sso", "oauth", "login"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/imorland/flarum-ext-oauth-telegram/issues",
        "source": "https://github.com/imorland/flarum-ext-oauth-telegram",
        "forum": "https://discuss.flarum.org/d/29191"
    },
    "require": {
        "flarum/core": "^1.2.0",
        "fof/oauth": "^1.3.0",
        "nodeloc/oauth2-telegram": "^1.0.0"
    },
    "authors": [
        {
            "name": "Nodeloc",
            "homepage": "https://discuss.flarum.org/u/nodeloc"
        }
    ],
    "autoload": {
        "psr-4": {
            "Nodeloc\\OAuthTelegram\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Log In With Telegram",
            "category": "feature",
            "icon": {
                "name": "fab fa-telegram",
                "backgroundColor": "#0072e3",
                "color": "#fff"
            }
        }
    }
}
